<div class='container'>
  <div class='row'>
    <div class='span6'>
      <div class='embed-container'>
        &nbsp;

        <iframe src='http://player.vimeo.com/video/169606361' width='600' height='400' frameborder='0' webkitAllowFullScreen mozallowfullscreen allowFullScreen></iframe>
      </div>
    </div>
  </div>
</div>

<div class='container'>
  <% @channels_by_category.each do |category, channels| %>
    <div class='row'>
      <div class='col-lg-12'>
        <h1 class='page-header'><%= category.capitalize %></h1>
      </div>

      <% channels.each do |channel| %>
        <div class='col-lg-3 col-md-4 col-xs-6 thumb'>
          <%= link_to image_tag(channel_image_path(channel), class: 'img-responsive'), channel_path(channel), class: 'thumbnail' %>
        </div>
      <% end %>
    </div>
  <% end %>

  <hr>
</div>
