<div class='container'>
  <div class='row'>
    <div class='span6'>
      <div class='embed-container'>
        &nbsp;

        <%= @channel.embed_code.html_safe %>
      </div>
    </div>
  </div>
</div>

<div class='container'>
  <div class='row'>
    <div class='col-lg-12'>
      <h1 class='page-header'><%= @channel.category.capitalize %></h1>
    </div>

    <% @similar_channels.each do |channel| %>
      <div class='col-lg-3 col-md-4 col-xs-6 thumb'>
        <%= link_to image_tag(channel_image_path(channel), class: 'img-responsive'), channel_path(channel), class: 'thumbnail' %>
      </div>
    <% end %>
  </div>

  <hr>
</div>
